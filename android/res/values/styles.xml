<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/_52sdp</item>
        <item name="fontFamily">@font/premier</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AchievementText">
        <item name="fontFamily">@font/premier</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NameAchievementText" parent="AchievementText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="DescriptionAchievementText" parent="AchievementText">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ImagesMenu">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
    </style>

</resources>
